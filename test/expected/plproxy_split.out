-- partition functions
\c test_part0
create or replace function test_array(a text[], b text[], c text) returns text as
$$
select current_database() || ' $1:' || array_to_string($1, ',')
                          || ' $2:' || array_to_string($2, ',')
                          || ' $3:' || $3;
$$ language sql;
